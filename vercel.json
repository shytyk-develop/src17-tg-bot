{
  "rewrites": [
    { "source": "/api/cron/broadcast", "destination": "/api/index.py" },
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "crons": [
    {
      "path": "/api/cron/broadcast?time=morning",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/broadcast?time=afternoon",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/cron/broadcast?time=evening",
      "schedule": "0 19 * * *"
    }
  ]
}